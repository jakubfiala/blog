---
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h1>
			<a class="title-link" href="/blog" title={SITE_TITLE}>
				Jakub Fiala &mdash; Blog
			</a>
		</h1>
	</nav>
</header>

<style>
	.title-link {
		color: inherit;
		display: block;
		text-decoration: none;
	}

	.logo {
		height: 2rem;
	}

	header {
		margin: 0;
		text-align: center;
	}

	header h1 {
		text-align: center;
		font-size: 3rem;
		letter-spacing: -0.1ch;
		margin: 1rem 0;
	}

	@media screen and (min-width: 768px) {
		header h1 {
			font-size: 5rem;
			margin: 2rem 0 3rem;
		}
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
